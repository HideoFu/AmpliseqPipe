#!/bin/bash

# ファイル名の整形と gz の解凍
rename 's/_001//' *.gz
rename 's/L001_R//' *.gz

touch filenames.txt
ls *.gz >> filenames.txt

parallel -a filenames.txt gunzip

rm filenames.txt

# 引数の作成 
touch samples.txt
ls *_1.fastq >> samples.txt
sed -e 's/_1.fastq//' samples.txt > samples2.txt

sh ./Code/fastqToSam.sh `cat samples2.txt`
